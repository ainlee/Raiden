{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@systems/*": ["systems/*"],
      "@entities/*": ["entities/*"]
    },
    "types": ["node", "jest", "phaser", "@types/phaser"],
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["node_modules"]
}